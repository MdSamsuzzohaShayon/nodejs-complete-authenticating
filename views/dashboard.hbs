<h2>Dashboard</h2>
<h3>Welcome {{name}}</h3>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}"></a>{{title}}</td>
            <td>{{formatDate createdAt 'MMM Do YYYY, h:mm:s a'}}</td>
            <td> <span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/stories/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
    <p>You have not created any story</p>
{{/if}}