doctype html
html
  head
    title node auth
    link(rel="stylesheet", href="/stylesheets/bootstrap.css")
    link(rel="stylesheet", href="/stylesheets/style.css")

  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='#') NodeAuth
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item(class=(title == 'Members'?'bg-dark':''))
            a.nav-link(href='/') Members 
          li.nav-item(class=(title == 'Login'?'bg-dark':''))
            a.nav-link(href='/users/login') Login
          li.nav-item(class=(title == 'Register'?'bg-dark':''))
            a.nav-link(href='/users/register') Register
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/users/logout") Log Out
    .container
    != messages()
    block content
      script(src="https://code.jquery.com/jquery-3.3.1.min.js")
      script(src="javascript/bootstrap.js")
