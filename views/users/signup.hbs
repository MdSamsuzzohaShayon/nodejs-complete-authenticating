<div class="wrapper">
    <div class="ui container">
        <br><br>
        <form action="/users/signup" class="ui form segment" method="POST">
            <div class="two fields">
                <div class="field">
                    <label for="fname">First Name</label>
                    <input type="text" placeholder="Enter you first name..." name="fname">
                </div>
                <div class="field">
                    <label for="lname">Last Name</label>
                    <input type="text" placeholder="Enter your last name..." name="lname">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="email">E-mail</label>
                    <input type="email" placeholder="Enter your email..." name="email">
                </div>
                <div class="field">
                    <label for="gender">Gender</label>
                    <select name="gender" id="gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label for="password">Password</label>
                    <input type="password" placeholder="Enter your passward..." name="password">
                </div>
                <div class="field">
                    <label for="password2">Password again</label>
                    <input type="password" placeholder="Enter your passward again..." name="password2">
                </div>
            </div>
            <div class="field">
                <input type="submit" class="ui button green fluid">
            </div>
        </form>

