extends layout

block content
  .container
    br
    hr
    h2.text-center.page-header Login
    form(method="post", action="/users/login")
    
      .form-group
      label Username
      input.form-control(name='username', type='text', placeholder="Enter your username")
      
      .form-group
      label Password
      input.form-control(name='password', type='password', placeholder="Enter your password")
      
      .form-group
      input.btn.btn-primary(type='submit'. name="submit", value="Log in")


